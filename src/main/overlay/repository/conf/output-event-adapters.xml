<outputEventAdaptersConfig>
    <adapterConfig type="email">
        <property key="mail.smtp.from">accounts@cshr.digital</property>
        <property key="mail.smtp.user">$SMTP_USER</property>
        <property key="mail.smtp.password">$SMTP_PASSWORD</property>
        <property key="mail.smtp.host">in-v3.mailjet.com</property>
        <property key="mail.smtp.port">587</property>
        <property key="mail.smtp.starttls.enable">true</property>
        <property key="mail.smtp.auth">true</property>
        <!-- Thread Pool Related Properties -->
        <property key="minThread">8</property>
        <property key="maxThread">100</property>
        <property key="keepAliveTimeInMillis">20000</property>
        <property key="jobQueueSize">10000</property>
    </adapterConfig>
</outputEventAdaptersConfig>
